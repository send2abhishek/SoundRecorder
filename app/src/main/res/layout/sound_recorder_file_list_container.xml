<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:id="@+id/sound_recorder_files_cardView"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            android:foreground="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/ic_audio"
                    android:layout_marginRight="8dp"
                    android:id="@+id/sound_recorder_file_image_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="file_001_36_text1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/sound_recorder_file_file_name_text"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:layout_toRightOf="@id/sound_recorder_file_image_view"
                    android:layout_toEndOf="@id/sound_recorder_file_image_view" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29/12/2018,11:30PM"
                    android:id="@+id/sound_recorder_file_file_creation_date"
                    android:layout_below="@id/sound_recorder_file_file_name_text"
                    android:layout_toRightOf="@id/sound_recorder_file_image_view"
                    android:layout_toEndOf="@id/sound_recorder_file_image_view"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:40"
                    android:layout_marginRight="12dp"
                    android:id="@+id/sound_recorder_file_duration"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>



        </android.support.v7.widget.CardView>







</LinearLayout>